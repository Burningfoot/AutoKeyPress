<Window x:Class="AutoKeyPress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoKeyPress"
        mc:Ignorable="d"
        Title="Auto Key Press" Height="100" Width="180"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid  Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Start" Command="{Binding BtnStart}" Focusable="False"/>
            <Button Grid.Column="0" Grid.Row="1" Content="Stop" Command="{Binding BtnStop}" Focusable="False"/>
        </Grid>
        <Label Grid.Column="0" Grid.Row="0" Height="auto" Width="auto" Content="{Binding TextForDialog, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>       